{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "types": ["node"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": false
    },
    "include": ["./src"],
    "exclude": ["**/*.spec.*", "./lib/**/*"],
  }